<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 链接颜色正常大小的文字 -->
    <style name="style_blue_normal_text">
        <item name="android:textColor">#72ACE3</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!-- 黑色正常大小的文字 -->
    <style name="style_black_normal_text">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 分割线 -->
    <style name="style_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ebebeb</item>
    </style>

    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>
